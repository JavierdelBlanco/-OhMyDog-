<h2>¿Qué desea registrar?</h2>

<ul class="list-unstyled">
  <% if @castrado == false %>
    <li><%= link_to "Registrar Castración", crear_castracion_path(@perrito, user_id: @user.id, quien: @quien), class: "btn btn-secondary mb-2" %></li>
  <% end %>
  <li><%= link_to "Registrar Vacuna Antirrábica", crear_vacunar_path(@perrito, user_id: @user.id, quien: @quien), class: "btn btn-secondary mb-2" %></li>
  <li><%= link_to "Registrar Vacuna Antienfermedades", crear_vacunae_path(@perrito, user_id: @user.id, quien: @quien), class: "btn btn-secondary mb-2" %></li>
  <li><%= link_to "Registrar Desparasitación", crear_desparasitacion_path(@perrito, user_id: @user.id, quien: @quien), class: "btn btn-secondary mb-2" %></li>
  <li><%= link_to "Registrar Atención Clínica Ambulatoria", crear_atencion_clinica_path(@perrito, user_id: @user.id, quien: @quien), class: "btn btn-secondary mb-2" %></li>
</ul>

<% if params[:quien] == 'ajeno' %>
  <%= link_to "Volver atrás", ver_perrito_ajeno_path(@perrito, user_id: @user.id), class: "btn btn-secondary" %>
<% else %>
  <%= link_to "Volver atrás (mío)", ver_perrito_path(@perrito, user: current_user), class: "btn btn-secondary" %>
<% end %>
