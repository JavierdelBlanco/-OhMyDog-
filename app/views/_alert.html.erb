<% if notice.present? %>
  <div class="alert <%= notice.match?(/Falló|fallado|falló/) ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>