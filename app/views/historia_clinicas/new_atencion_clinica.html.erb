<%= form_with(model: @historia_clinica) do |form| %>
  
    <div>
      <%= form.label :dia, style: "display: block" %>
      <%= form.number_field :dia %>
    </div>
  
    <div>
      <%= form.label :mes, style: "display: block" %>
      <%= form.number_field :mes %>
    </div>
  
    <div>
      <%= form.label :año, style: "display: block" %>
      <%= form.number_field :año %>
    </div>
  
    <div>
      <%= form.label :Cuadro_sintomatologico, style: "display: block" %>
      <%= form.text_area :sintomas %>
    </div>
  
    <div>
      <%= form.label :diagnostico, style: "display: block" %>
      <%= form.text_area :diagnostico %>
    </div>
  
    <div>
      <%= form.label :tratamiento, style: "display: block" %>
      <%= form.text_area :tratamiento %>
    </div>

    <div>
      <%= form.label :Detalles_adicionales, style: "display: block" %>
      <%= form.text_area :detalle %>
    </div>

    <%= form.hidden_field :id, value: @perrito.id %>
    <%= form.hidden_field :tipo, value: 'Atención Clínica Ambulatoria' %>
    <%= form.hidden_field :quien, value: params[:tipo] %>
    <%= form.hidden_field :user_id, value: params[:user_id] %>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>