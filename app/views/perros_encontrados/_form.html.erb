<%= form_with(model: perros_encontrado) do |form| %>
  <% if perros_encontrado.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(perros_encontrado.errors.count, "error/es") %> impidieron la publicacion de este perro.</h2>

      <ul>
        <% perros_encontrado.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :descripcion, style: "display: block" %>
    <%= form.text_area :descripcion, style: "height: 6em; width: 20em;" %>
  </div>

  <div>
    <%= form.label :foto, style: "display: block" %>
    <%= form.file_field :foto %>
  </div>

  <div style="display: none;">
    <%= form.label :fecha_de_publicacion, style: "display: block" %>
    <%= form.date_field :fecha_de_publicacion %>
  </div>

  <div style="display: none;">
    <%= form.label :Estado, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div style="display: none;">
    <%= form.label :mail, style: "display: block" %>
    <%= form.text_field :mail %>
  </div>

  <div style="margin-top: 20px;">
  <% if request.path == '/perros_encontrados/new' %>
    <%= form.submit 'Publicar' %>
  <% else %>
    <%= form.submit 'Guardar cambios' %>
  <% end%>
  </div>

<% end %>
