<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card" style= 'border: 1px solid #0D9BB5;'>
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Iniciar sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-3" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= f.label 'Contraseña' , class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <div class="text-center">
              <%= f.submit "Iniciar sesión", class: "btn btn-turqueza" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
