<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card" style= 'border: 1px solid #0D9BB5;'>
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Iniciar sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-3" }) do |f| %>
            
            <div class="mb-3">
                <%= f.label :email , class: "form-label", style: "display: block;" %>
                  <div class="input-group has-validation">
                  <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", required: true, id: 'validationEmail' %>
                  </div>
            </div>

            <div class="mb-3">
              <%= f.label 'Contraseña' , class: "form-label" %>
              <div class="input-group has-validation">
                  <%= f.password_field :password, class: "form-control", autocomplete: "current-password", required: true, id: 'validationPassword' %>
              </div>
            </div>


            <div class="text-center">
              <%= f.submit "Iniciar sesión", class: "btn btn-turqueza" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
